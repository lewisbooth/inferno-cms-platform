
.GalleryEditItem
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(0, 0, 0, 0.8)
  color $whitetext
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color $darkgrey
    color $whitetext
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px
    padding 3px 0 0 2px

    &:hover
      background-color firebrick
      
  &__modal
    background-color $darkgrey
    border-radius 10px
    overflow hidden
    position relative
    display flex
    flex-direction row
    align-items center

    &--image
      z-index 11
      max-height 500px
      max-width 70vw

    &--form
      padding 50px 30px
      width 350px
      align-self stretch
      border-left 1px solid $orange
      font-size 1.1em

      &--title
        font-size 2.4em
        text-align left
        margin-top 0
        margin-bottom 30px

      p
        font-size 1em
        color #888
        margin-bottom 10px
        line-height 1.2em

      label
        display block
        text-transform uppercase
        letter-spacing 0.1em
        margin-bottom 5px

      input
        box-sizing border-box
        width 100%
        margin-bottom 30px
        background-color #333 
        border none 
        border-bottom 1px solid $orange
        font-size 1em
        padding 5px 7px
        color $whitetext

        &::placeholder
          color $whitetext

        &:focus
          outline none
          background-color $darkgreyhighlight

      &--tags
        display flex
        flex-direction row
        align-items center 
        justify-content left
        margin-bottom 30px
        margin-top 10px
        flex-wrap wrap

        &--checkbox
          background-color $darkgreyhighlight
          color $whitetext
          padding 9px 15px 7px 15px
          border-radius 15px
          margin-right 10px
          margin-bottom 10px
          cursor pointer
          user-select none !important
          font-size .7em

          &:hover
            background-color $darkorange

          &.checked
            background-color $orange

      button[type=reset]
        background-color #444
        color $whitetext
        margin-right 20px
        padding 10px 13px 8px 13px
        font-size .8em
        font-family $nexabold

        &:hover
          background-color #666

      button[type=submit]
        background-color $green
        color $whitetext
        padding 10px 13px 8px 13px
        font-size .8em
        font-family $nexabold

        &:hover
          background-color $darkgreen