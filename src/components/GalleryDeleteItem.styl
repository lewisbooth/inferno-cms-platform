
.GalleryDeleteItem
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(0, 0, 0, 0.8)
  color $whitetext
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color $darkgrey
    color $whitetext
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px
    padding 3px 0 0 4px

    &:hover
      background-color firebrick
      
  &__modal
    background-color $darkgrey
    border-radius 10px
    overflow hidden
    position relative
    display flex
    flex-direction row
    align-items center

    img 
      max-width 600px
      max-height 600px

    &--confirm
      padding 40px
      display flex
      flex-direction column
      justify-content center
      align-self stretch
      border-left 1px solid $orange

      &--title
        font-size 2.4em
        text-align left
        margin-top 0
        margin-bottom 10px

      &--info
        color #999
        margin-bottom 18px
        font-size 1.2em

      &--delete
        background-color $green
        margin-right 15px
        font-size .8em

      &--delete:hover
        background-color firebrick

      &--cancel
        background-color $darkgreyhighlight
        font-size .8em

      &--cancel:hover
        background-color #888
