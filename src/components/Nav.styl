.Nav 
  text-align center
  background-color $darkgrey
  padding 30px 20px
  margin 0
  color #fff
  height 500px
  display flex
  align-items center
  justify-content center
  flex-direction column
  border-bottom 1px solid $orange
  overflow hidden
  position relative

  a
    color $whitetext
    text-decoration none

  &__background-image
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    min-width 100%
    z-index 0
    transition opacity 0.5s

    &.loading
      opacity 0

    &.loaded
      opacity 1

  &__cta
    position absolute
    top 50px
    right 50px

    &--book-table
      color $whitetext
      padding 20px 25px 15px 25px
      font-size 1.1em    

    &--divide
      margin 1.2em 0 0.6em 0

    &--phone
      letter-spacing 0.1em
      display flex
      align-items center
      justify-content center
      width 100%

      &--text
        font-size 1.4em
        padding-top 0.1em

      &--icon
        width 20px
        height 20px
        margin-right 0.4em
        
      &:hover
        text-decoration underline
    
  &__wrapper
    z-index 1

    &--menu
      list-style none
      padding-left 0
      margin-top 60px
      display flex
      justify-content space-around
      max-width 300px

      & li a
        margin 0 20px
        text-transform uppercase
        font-size 1.1em
        font-weight 700
        letter-spacing 0.1em
        padding 3px 6px
        border-bottom 3px solid rgba(223,125,50, 0)
        transition border-bottom 0.3s

        &:hover
          text-decoration none
          border-bottom-color rgba(223,125,50, 1)


    h1 
      & a
        text-decoration none