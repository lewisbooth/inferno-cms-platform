.Nav 
  text-align center
  background-color $darkgrey
  padding 30px 20px
  margin 0
  color #fff
  height 500px
  display flex
  align-items center
  justify-content center
  flex-direction column
  border-bottom 1px solid $orange
  overflow hidden
  position relative

  a
    color $whitetext
    text-decoration none
    letter-spacing 0.1em

  &__background-image
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    min-width 100%
    z-index 0
    transition opacity 0.5s

    &.loading
      opacity 0

    &.loaded
      opacity 1

  &__cta
    position absolute
    top 50px
    right 50px

    &--book-table
      background-color $orange
      color $whitetext
      padding 20px 20px 15px 20px
      font-size 1em
      font-family $nexabold
      
      &:hover
        background-color $darkorange

    &--divide
      margin 1.2em 0 1em 0

    &--phone
      letter-spacing 0.1em
      display flex
      align-items center

      &--text
        font-size 1.2em
        padding-top 0.1em

      &--icon
        width 20px
        height 20px
        margin-right 0.4em
        
    
  &__wrapper
    z-index 1

    &--menu
      list-style none
      padding-left 0
      margin-top 60px
      display flex
      justify-content space-around
      max-width 300px

      & li
        margin 0 20px
        text-transform uppercase
        font-size 1.1em
        font-weight 700

        & a:hover
          text-decoration underline


    h1 
      & a
        text-decoration none