
.EditItem
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(30, 30, 30, 0.8)
  color $whitetext
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color $darkgrey
    color $whitetext
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px
    padding 3px 0 0 2px

    &:hover
      background-color firebrick
      
  &__modal
    background-color $darkgrey
    border-radius 10px
    overflow hidden
    position relative
    display flex
    flex-direction row
    align-items center

    &--image
      z-index 11
      max-height 500px
      max-width 70vw

    &--info
      padding 50px 30px
      width 250px
      align-self stretch
      border-left 1px solid $orange

      &--title
        font-size 2em
        text-align left
        margin-top 0
        margin-bottom 30px

      p
        font-size 0.8em
        color #888
        margin-bottom 10px
        line-height 1.2em

      label
        display block
        text-transform uppercase
        letter-spacing 0.1em
        margin-bottom 5px

      input
        box-sizing border-box
        width 100%
        margin-bottom 30px
        background-color #333
        border none 
        border-bottom 1px solid $orange
        font-size 1em
        padding 5px 7px
        color $whitetext

        &:focus
          outline none
          background-color #444

      button[type=reset]
        background-color #444
        color $whitetext
        margin-right 20px
        padding 10px 13px 8px 13px

        &:hover
          background-color #666

      button[type=submit]
        background-color $orange
        color $whitetext
        padding 10px 13px 8px 13px

        &:hover
          background-color $darkorange