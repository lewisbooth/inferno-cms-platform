.AdminBar
  position fixed
  bottom 0
  padding 10px 20px
  width 100%
  color $whitetext
  background-color $orange
  border-top 2px solid $darkorange
  border-bottom none
  box-sizing border-box
  z-index 999
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  transition all .3s

  button
    background-color $orange
    color white
    border 1px solid $whitetext
    display flex
    align-items center
    font-size 1em
    transition all .3s

    svg
      height 20px
      margin-left 5px
      fill $whitetext

    &:hover
      background-color white
      color $darkorange

      svg
        fill $darkorange

  // &__toggle-edit
  //   align-self right
    
  &.editing
    background-color $green
    border-color $darkgreen

    button
      background-color $green
      border 1px solid $whitetext

      &:hover
        background-color $whitetext
        color $green

  &__status
    display flex
    align-self stretch
    position absolute
    left 50%
    bottom 12px
    transform translateX(-50%)
    flex-direction column
    align-items center
    justify-content flex-end

    & h4  
      text-transform uppercase
      letter-spacing 0.1em
      font-size 1.6em
      font-family $nexabold

    & p
      font-size 0.8em
      letter-spacing 0.1em

  &__profile
    display flex
    align-self stretch

    &--image
      height 50px
      width 50px
      border-radius 100%
      border 2px solid $whitetext
      margin-right 20px

    &--greeting
      align-self stretch
      display flex
      flex-direction column
      align-items flex-start
      justify-content center
      color $whitetext

      & h4
        font-size 1.5em