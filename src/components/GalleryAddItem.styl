
.GalleryAddItem
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(0, 0, 0, 0.8)
  color $whitetext
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color $darkgrey
    color $whitetext
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px
    padding 3px 0 0 4px

    &:hover
      background-color firebrick
      
  &__modal
    background-color $darkgrey
    border-radius 10px
    overflow hidden
    position relative

    &--form
      padding 50px 30px
      height 100%
      align-self stretch
      font-size 1.1em

      &--title
        font-size 2.4em
        text-align left
        margin-top 0
        margin-bottom 30px

      p
        font-size 1em
        color #888
        margin-bottom 10px
        line-height 1.2em

      label
        display block
        text-transform uppercase
        letter-spacing 0.1em
        margin-bottom 5px

      input[type=file]
        margin-bottom 30px

      input[type=text]
        box-sizing border-box
        width 100%
        margin-bottom 30px
        background-color #333
        border none 
        border-bottom 1px solid $orange
        font-size 1em
        padding 5px 7px
        color $whitetext

        &:focus
          outline none
          background-color $darkgreyhighlight

      &--tags
        display flex
        flex-direction row
        align-items center 
        justify-content left
        margin-bottom 30px

        &--checkbox
          font-size 13px
          background-color $darkgreyhighlight
          color $whitetext
          padding 9px 15px 7px 15px
          border-radius 15px
          margin-right 10px
          margin-bottom 10px
          cursor pointer
          user-select none !important

          &:hover
            background-color $darkorange

          &.checked
            background-color $orange

      button[type=reset]
        background-color $darkgreyhighlight
        color $whitetext
        margin-right 20px
        padding 10px 13px 8px 13px
        font-size 14px

        &:hover
          background-color #666

      button[type=submit]
        font-size 14px
        background-color $green
        color $whitetext
        padding 10px 13px 8px 13px

        &:hover
          background-color $darkgreen