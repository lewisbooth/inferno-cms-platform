.BookingForm
  background-color $darkgreyhighlight
  color $whitetext
  padding 30px 20px
  margin 0

  .page-container
    display flex
    justify-content center
    align-items center

  &__form1
    display flex
    font-size 16px

    &--field
      background-color #fff
      color #222
      display flex
      align-items center
      padding 9px 14px
      width 175px
      margin-right 20px
      border-radius 5px
      font-family $nexabold

      &:hover
        background-color #ddd
        cursor pointer

      p
        font-family $nexabold

      img 
        margin-left auto
        width 20px

      input
        font-family $nexabold
        font-size 16px
        border none 
        background-color rgba(255,255,255,0)

        &[type=number]
          padding-right 0

        &::-webkit-calendar-picker-indicator, 
        &::-webkit-clear-button, 
        &::-webkit-inner-spin-button, 
        &::-webkit-outer-spin-button 
          -webkit-appearance none
          -moz-appearance none
          appearance none
          margin 0    
          display none

        &:focus
          outline none 
          background-color rgba(255,255,255,0)

        &:hover
          background-color #ddd
          cursor pointer

    &--submit
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
      align-self stretch
      font-size 16px