.Newsletter
  background-color $darkgreyhighlight
  color $whitetext
  text-align center
  padding-top 30px
  padding-bottom 40px
  border-top 1px solid $orange
  border-bottom 1px solid $orange

  h4
    font-size 1.4em
    margin-bottom 15px

  form
    display flex
    justify-content center

    label
      margin-right 10px
      font-family $nexabold
      text-transform uppercase

    input 
      background-color #ddd
      border none 
      color $darkgrey
      font-size 1.2em
      padding 6px 8px 4px 8px
      width 300px
      font-family $nexabold

      &:focus
        background-color #ccc

    button
      font-size 2em
      padding 0 10px 0 15px
      -webkit-box-shadow none
      -moz-box-shadow none
      box-shadow none
