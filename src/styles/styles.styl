body
  margin 0
  padding 0
  font-family "Open Sans", "lucida grande", "Segoe UI", arial, verdana, "lucida sans unicode", tahoma, sans-serif

button
  cursor pointer
  outline none
  border none

.Nav
  text-align center
  background-color #3d464d
  height 150px
  padding 20px
  color #fff

  a
    color #fff

  ul
    list-style none
    padding-left 0
    display flex
    justify-content center

    & li
      margin 0 20px

  h2 
    & a
      text-decoration none

.Footer
  background-color #3d464d
  color white
  text-align center

.Portfolio

  &__items
  display flex
  align-items space-around

    &--block
      position relative
      float left
      width 200px
      height 200px
      background-color #222
      transition all .3s

      &:hover
        .Portfolio__items--block--remove-item
          opacity 1 

      &--remove-item
        position absolute
        top 10px
        right 10px
        height 20px
        width 20px
        padding 0 2px 2px 2px
        border none
        background-color #222
        color #fff
        z-index 1
        opacity: 0

        &:hover
          cursor pointer

      &--add-item
        padding 50%
        display flex
        justify-content center
        align-items center
        width 100%
        box-sizing border-box
        transition all .3s
        background-color #fafafa
        -webkit-box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);
        -moz-box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);
        box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);

        &:hover
          background-color #f4f4f4
          -webkit-box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);
          -moz-box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);
          box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);

          .Portfolio__items--block--add-item--inner
            color #666

        &--inner
          position absolute
          color #aaa
          transition all .3s
          
          &--plus
            font-size 5em

          &--text
            font-size 1.2em
          
