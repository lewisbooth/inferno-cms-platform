body
  margin 0
  padding 0
  font-family "Open Sans", "lucida grande", "Segoe UI", arial, verdana, "lucida sans unicode", tahoma, sans-serif

button
  cursor pointer
  outline none
  border none

.Nav
  text-align center
  background-color #3d464d
  padding 30px 20px
  color #fff

  a
    color #fff

  ul
    list-style none
    padding-left 0
    display flex
    justify-content center

    & li
      margin 0 20px

  h1 
    & a
      text-decoration none

.Footer
  background-color #eee
  color #666
  text-align center
  padding 20px
  margin-top 50px

.page-container
  max-width 1200px
  margin 0 auto

.Portfolio

  &__items
    display flex
    align-items space-around
    flex-wrap wrap

    &--block
      position relative
      float left
      width 200px
      height 200px
      background-color #f4f4f4
      transition all .3s

      &:hover
        & > button
          opacity 1 

      &--image 
        transition opacity .5s

        &.loading 
          opacity 0

        &.loaded
          opacity 1

      &--remove-item
        position absolute
        top 10px
        right 10px
        height 20px
        width 20px
        padding 0 2px
        border none
        border-radius 3px
        background-color rgba(30,30,30,0.75)
        color #fff
        z-index 1
        transition opacity .2s
        opacity: 0

        &:hover
          cursor pointer
          background-color firebrick

          & + div
            opacity 1

        &--caption
          background-color rgba(30,30,30,0.75)
          border-radius 3px
          color #fff
          font-size .8em
          position absolute
          top 9px
          right 35px
          padding 3px 5px
          opacity 0
          transition opacity .5s


      &--add-item
        padding 50%
        display flex
        justify-content center
        align-items center
        width 100%
        box-sizing border-box
        transition all .3s
        background-color #fafafa
        -webkit-box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);
        -moz-box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);
        box-shadow inset 0px 0px 0px 3px rgba(240,240,240,1);

        &:hover
          cursor pointer
          background-color #f4f4f4
          -webkit-box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);
          -moz-box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);
          box-shadow inset 0px 0px 0px 5px rgba(200,200,200,1);

          & > div
            color #666

        &--inner
          position absolute
          color #aaa
          transition all .3s
          
          &--plus
            font-size 5em

          &--text
            font-size 1.2em
          
.Lightbox
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(30, 30, 30, 0.7)
  color #fff
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap 

  &__nav
    padding 80px 40px
    font-size 3em
    color #fff
    background none
    opacity 0.3
    transition opacity 0.5s

    &:hover
      background rgba(61,70,77,0.5)
      opacity 1

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color #000
    color #fff
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px

    &:hover
      background-color firebrick

  &__image
    background-color #222
    border-radius 10px
    overflow hidden
    width 1000px
    position relative

    &--loading
      position absolute
      text-align center
      width 100%
      top 47%
      color #666

    &--active
      width 100%
      height 600px
      transition opacity .3s
      display block
      position relative
      z-index 11

      &.loading 
        opacity 0

      &.loaded
        opacity 1

    &--caption
      position relative
      padding 15px 30px
      background-color #3d464d
      line-height 0em
      display flex

      &--profile-pic
        border-radius 100%
        margin-right 20px
        width 70px
        height 70px

      &--section
        margin-right 50px

        & h5
          color #aaa

        & a
          color #fff
          text-decoration none

          &:hover
            text-decoration underline
    
        

