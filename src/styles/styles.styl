body
  margin: 0;
  padding: 0;
  font-family: "Open Sans", "lucida grande", "Segoe UI", arial, verdana, "lucida sans unicode", tahoma, sans-serif;

.App-header
  text-align: center;
  background-color: #3d464d;
  height: 150px;
  padding: 20px;
  color: #fff;

  a
    color: #fff;

  ul
    list-style: none;
    padding-left: 0;
    display: flex;
    justify-content: center;

    & li
      margin: 0 20px;

  h2 
    & a
      text-decoration: none;

.Page-container
  max-width: 1200px;
  margin: 0 auto;

.Footer
  background-color: #3d464d;
  color: white;
  text-align: center;