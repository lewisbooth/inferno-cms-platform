$darkgrey = #222
$whitetext = #eaeaea
$orange = #df7d32

* {
  font-family "Nexa", "lucida grande", "Segoe UI", arial, verdana, "lucida sans unicode", tahoma, sans-serif
}

body
  margin 0
  padding 0

button
  cursor pointer
  outline none
  border none

.Nav
  text-align center
  background-color $darkgrey
  background-position center
  background-size cover
  padding 30px 20px
  margin 0
  color #fff
  height 500px
  display flex
  align-items center
  justify-content center
  flex-direction column
  border-bottom 1px solid $orange
  transition background-image .5s

  a
    color $whitetext
    text-decoration none
    letter-spacing 0.1em

  &__menu
    list-style none
    padding-left 0
    margin-top 60px
    display flex
    justify-content space-around
    max-width 300px

    & li
      margin 0 20px
      text-transform uppercase

  h1 
    & a
      text-decoration none

h2
  text-transform uppercase
  font-size 3.5em
  letter-spacing 0.15em
  width 100%
  text-align center
  font-family 'Ostrich Sans Black'

.Footer
  background-color #111
  color #666
  text-align center
  padding 20px

.page-container
  max-width 1200px
  margin 0 auto

.Gallery
  background-color $darkgrey
  padding 20px 50px 80px 50px
  color $whitetext

  &__items
    display flex
    align-items space-around
    flex-wrap wrap

    &--block
      position relative
      float left
      width 300px
      height 300px
      background-color $darkgrey
      transition all .3s
      overflow hidden

      &:hover
        cursor pointer
        & > button
          opacity 1 

      &--image
        transform scale(1) 
        filter blur(0) brightness(100%)
        transition all .5s

        &:hover
          transform scale(1.1)
          filter blur(3px) brightness(60%)

        &.loading 
          opacity 0

        &.loaded
          opacity 1

      &--remove-item
        position absolute
        top 10px
        right 10px
        height 30px
        width 30px
        border none
        border-radius 3px
        background-color rgba(30,30,30,1)
        color #fff
        z-index 1
        transition opacity .2s
        opacity: 0

        &:hover
          cursor pointer
          background-color firebrick

          & + div
            opacity 1
            right 45px

        &--caption
          background-color rgba(30,30,30,0.75)
          border-radius 3px
          color #fff
          font-size .8em
          position absolute
          top 12px
          right 25px
          padding 5px 7px
          opacity 0
          transition all .3s ease-in-out


      &--add-item
        padding 50%
        display flex
        justify-content center
        align-items center
        width 100%
        box-sizing border-box
        transition all .3s
        background-color $darkgrey
        -webkit-box-shadow inset 0px 0px 0px 2px rgba(45,45,45,1);
        -moz-box-shadow inset 0px 0px 0px 2px rgba(45,45,45,1);
        box-shadow inset 0px 0px 0px 2px rgba(45,45,45,1);

        & > div
          color #666

        &:hover
          cursor pointer
          background-color #333
          -webkit-box-shadow inset 0px 0px 0px 2px rgba(223,125,50,1);
          -moz-box-shadow inset 0px 0px 0px 2px rgba(223,125,50,1);
          box-shadow inset 0px 0px 0px 2px rgba(223,125,50,1);

          & > div
            color #aaa

        &--inner
          position absolute
          color #aaa
          transition all .3s
          
          &--plus
            font-size 5em

          &--text
            font-size 1.2em
          
.Lightbox
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(30, 30, 30, 0.8)
  color #fff
  z-index 9
  display flex
  align-items center
  justify-content center
  flex-wrap wrap

  &__nav
    padding 80px 40px
    font-size 3em
    color #fff
    background none
    opacity 0.5
    transition opacity 0.5s

    &:hover
      opacity 1

  &__close
    position absolute
    top 30px
    right 30px
    width 40px
    height 40px
    background-color $darkgrey
    color #fff
    font-size 1.5em
    z-index 10
    display flex
    align-items center
    justify-content center
    border-radius 5px

    &:hover
      background-color firebrick

  &__image
    background-color $darkgrey
    border-radius 10px
    overflow hidden
    width 1000px
    position relative

    &--loading
      position absolute
      text-align center
      width 100%
      top 47%
      color #666

    &--active
      width 100%
      height 600px
      transition opacity .3s
      display block
      position relative
      z-index 11

      &.loading 
        opacity 0

      &.loaded
        opacity 1

    &--caption
      position relative
      background-color $darkgrey
      line-height 0em
      display flex
      border-top 1px solid $orange
      text-align center

      h5
        width 100%
        text-transform uppercase
        font-size 1.2em
        letter-spacing 0.1em
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    
        

