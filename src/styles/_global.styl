* 
  font-family $nexalight
  margin 0
  padding 0

body
  margin 0
  padding 0
  background-color $black
  overflow-y scroll !important

  &.lightbox-active
    overflow-y hidden !important

button
  cursor pointer
  outline none
  border none
  border-radius 5px
  padding 10px 15px
  text-transform uppercase
  letter-spacing 0.2em
  transition all .3s

.Button__main
  background-color $orange
  font-family $nexabold
  -webkit-box-shadow 3px 4px 22px -4px rgba(0,0,0,0.75)
  -moz-box-shadow 3px 4px 22px -4px rgba(0,0,0,0.75)
  box-shadow 3px 4px 22px -4px rgba(0,0,0,0.75)

  &:hover
    background-color $darkorange


h2
  text-transform uppercase
  font-size 3.5em
  letter-spacing 0.15em
  width 100%
  text-align center
  font-family $ostrich
  margin 50px auto

h3
  text-transform uppercase
  font-size 2.5em
  letter-spacing 0.15em
  width 100%
  text-align center
  font-family $ostrich
  margin 50px auto

ul
  list-style none

::-moz-selection { 
  background $orange
  color $whitetext
}

::selection { 
  background $orange
  color $whitetext
}

.page
  padding 12px 50px 80px 50px

  & .page-container
    max-width 1500px
    margin 0 auto

